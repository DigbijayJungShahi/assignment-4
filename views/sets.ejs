<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Sets</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container mx-auto">
        <div class="grid grid-cols-3 gap-4">
            <% sets.forEach(function(set) { %>
            <div class="card">
                <div class="card-body">
                    <img src="<%= set.image_url %>" alt="<%= set.name %>">
                    <h2 class="card-title"><%= set.name %></h2>
                    <p class="text-sm"><%= set.description %></p>
                    <a href="/lego/sets/<%= set.num %>" class="btn btn-primary">Data Set</a>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
