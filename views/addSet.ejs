<!DOCTYPE html>
<html>
<head>
  <title>Add Set</title>
</head>
<body>
  <h1>Add a New Lego Set</h1>
  <form action="/lego/addSet" method="post">
    <label for="set_num">Set Number:</label>
    <input type="text" id="set_num" name="set_num" required><br>

    <label for="name">Set Name:</label>
    <input type="text" id="name" name="name" required><br>

    <label for="year">Year:</label>
    <input type="number" id="year" name="year" required><br>

    <label for="num_parts">Number of Parts:</label>
    <input type="number" id="num_parts" name="num_parts" required><br>

    <label for="theme_id">Theme:</label>
    <select id="theme_id" name="theme_id" required>
      <% themes.forEach(theme => { %>
        <option value="<%= theme.id %>"><%= theme.name %></option>
      <% }) %>
    </select><br>

    <label for="img_url">Image URL:</label>
    <input type="url" id="img_url" name="img_url"><br>

    <button type="submit">Add Set</button>
  </form>
</body>
</html>
