<!DOCTYPE html>
<html>
<head>
  <title>Edit Set</title>
</head>
<body>
  <h1>Edit Lego Set</h1>
  <form action="/lego/editSet" method="post">
    <input type="hidden" name="set_num" value="<%= set.set_num %>">

    <label for="name">Set Name:</label>
    <input type="text" id="name" name="name" value="<%= set.name %>" required><br>

    <label for="year">Year:</label>
    <input type="number" id="year" name="year" value="<%= set.year %>" required><br>

    <label for="num_parts">Number of Parts:</label>
    <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required><br>

    <label for="theme_id">Theme:</label>
    <select id="theme_id" name="theme_id" required>
      <% themes.forEach(theme => { %>
        <option value="<%= theme.id %>" <%= (theme.id == set.theme_id) ? 'selected' : '' %>><%= theme.name %></option>
      <% }) %>
    </select><br>

    <label for="img_url">Image URL:</label>
    <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>"><br>

    <button type="submit">Update Set</button>
  </form>
</body>
</html>
